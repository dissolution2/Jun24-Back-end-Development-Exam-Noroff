        <script>
          document.addEventListener('DOMContentLoaded', function() {
          const inputs = document.querySelectorAll('.inputBox input');
          inputs.forEach(input => {
            input.addEventListener('input', function() {
              const parent = input.parentElement;
              if (input.value.trim() !== '') {
                parent.classList.add('has-value');
              } else {
                parent.classList.remove('has-value');
              }
            });
          });
        });

        document.addEventListener('DOMContentLoaded', function() {
        const form = document.querySelector('.form');
        const submitBtn = form.querySelector('.submit-btn');
        
        // Function to check if all form fields are valid
        function checkValidity() {
            const inputs = form.querySelectorAll('input[required]'); // easy validation holds value
            let allValid = true;
            inputs.forEach(input => {
            if (!input.validity.valid) {
                allValid = false;
            }
            });
            return allValid;
        }
        // Function to update button color based on form validity
        function updateButtonColor() {
            if (checkValidity()) {
            submitBtn.style.backgroundColor = '#4CAF50'; // Green color if all fields are valid
            } else {
            submitBtn.style.backgroundColor = '#ff4d4d'; // Red color if any field is invalid
            }
        }
        // Update button color on form input
        form.addEventListener('input', updateButtonColor);
        });
          </script>
      
