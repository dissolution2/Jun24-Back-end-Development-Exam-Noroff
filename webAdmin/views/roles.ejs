        <table class="table table-bordered table-dark">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">roleName</th>
                <th scope="col">Option</th>
            </tr>
            </thead>
            <tbody>
            <%if (locals.DataRoles) { %>
                <% DataRoles.forEach(function(role) { %> 
            <tr>
                <td><%=role.roleId%></td>
                <td><%=role.roleName%></td>
                <td><button class="btn-sm option-update" onclick="" id="<%=role.roleId%>"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
